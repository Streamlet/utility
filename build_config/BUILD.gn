config("project_common") {
  if (is_win) {
    cflags_c = [ "/std:c17" ]
    cflags_cc = [
      "/std:c++17",
      "/EHsc",
    ]
  } else {
    cflags_c = [ "-std=c17" ]
    cflags_cc = [ "-std=c++17" ]
  }
  defines = [ "BOOST_AUTO_LINK_SYSTEM" ]
  include_dirs = [ "//thirdparty/boost/build/include" ]
  lib_dirs = [ "//thirdparty/boost/build/lib" ]
}
